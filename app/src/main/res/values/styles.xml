<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WideContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchParent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WideContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WideContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
